    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "cdpctl validate infra",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "validate",
                "infra",
                "--config_file",
                "config.yml"
            ],
            "justMyCode": false
        },
        {
            "name": "cdpctl validate infra -f json",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "validate",
                "infra",
                "--config_file",
                "config.yml",
                "-f",
                "json"
            ],
            "justMyCode": false
        },
        {
            "name": "cdpctl provision infra",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "provision",
                "infra",
                "--config_file",
                "config.yml"
            ]
        },
        {
            "name": "cdpctl config skeleton",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "config",
                "skeleton",
                "--output_file",
                "config.yml",
                "--platform",
                "aws"
            ]
        },
        {
            "name": "generate issue templates",
            "type": "python",
            "request": "launch",
            "program": "scripts/update_issue_templates.py",
            "console": "integratedTerminal"
        }
        ,
        {
            "name": "cdpctl config generate",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "config",
                "generate"
            ]
        }
    ]
}
